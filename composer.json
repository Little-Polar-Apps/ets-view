{
    "name": "little-polar-apps/ets-view",
    "type": "library",
    "description": "PHP Easy Template System View Parser package for the Slim Framework",
    "keywords": ["templating", "extensions", "slimphp"],
    "license": "MIT",
    "authors": [
        {
            "name": "Ian Tearle",
            "email": "ian@littlepolarapps.com",
            "homepage": "http://iantearle.com/"
        }
    ],
    "require": {
	    "slim/slim": ">=2.4.0",
	    "slim/views": ">=0.1.0",
        "php": ">=5.3.0"
    },
    "extra": {
        "installer-paths": {
            "vendor/slim/views/Slim/Views/{$name}": ["vendor/package"]
        }
    },
    "autoload": {
        "psr-0": {
            "Ets": "src/"
        }
    }
}